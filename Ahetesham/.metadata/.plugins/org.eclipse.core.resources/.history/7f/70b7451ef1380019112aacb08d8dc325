package com.bridgelabz.programs.functional;

import com.bridgelabz.programs.utils.FunctionalUtil;

public class LeapYear {
	public static void main(String []args)
	{
		int year;
		
		System.out.println("Enter the Year:=");
		
		year = FunctionalUtil.singleIntegerInput();
		
		int cnt = FunctionalUtil.countLeapYear(year);
		
		boolean result;
		if(cnt==4)
		{
			result = FunctionalUtil.checkLeapYear(year);
			if(result == true)
				System.out.println("Leap year");
			else
				System.out.println("Not Leap Year");
		}	
		
		else
			System.out.println("Enter a valid year!");
	}
}
